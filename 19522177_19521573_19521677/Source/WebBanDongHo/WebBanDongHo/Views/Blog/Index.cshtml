@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebBanDongHo.Models.Tindang>
@{
    ViewData["Title"] = "Blog Index - " + ViewBag.CurrentPage ;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int pageCurrent = ViewBag.CurrentPage;
    int pageNext = pageCurrent + 1;
}

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Harmic - Blog</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/favicon.ico" />

    <!-- CSS
    ============================================ -->
    <!-- Vendor CSS (Contain Bootstrap, Icon Fonts) -->
    <link rel="stylesheet" href="~/assets/css/vendor/font-awesome.min.css" />
    <link rel="stylesheet" href="~/assets/css/vendor/Pe-icon-7-stroke.css" />

    <!-- Plugin CSS (Global Plugins Files) -->
    <link rel="stylesheet" href="~/assets/css/plugins/animate.min.css">
    <link rel="stylesheet" href="~/assets/css/plugins/jquery-ui.min.css">
    <link rel="stylesheet" href="~/assets/css/plugins/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/assets/css/plugins/nice-select.css">
    <link rel="stylesheet" href="~/assets/css/plugins/magnific-popup.min.css" />

    <!-- Style CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css">

</head>
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="~/~/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Tin nổi bật</h2>
                        <ul>
                            <li>
                                <a asp-controller="Home" asp-action="Index">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Tin nổi bật</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="blog-area blog-column-2 section-space-y-axis-100">
        <div class="container">
            <div class="row">
                @if (Model != null && Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    string url = $"/tin-tuc/{item.Alias}-{item.PostId}.html";
                <div class="col-md-6">
                    <div class="blog-item">
                        <div class="blog-img img-zoom-effect">
                            <a href="@url">
                                <img class="img-fit-cover" src="~/images/tins/@item.Thumb" alt="@item.Title">
                            </a>
                        </div>
                        <div class="blog-content">
                            <div class="blog-meta text-dim-gray pb-3">
                                <ul>
                                    <li class="date"><i class="fa fa-calendar-o me-2"></i>@item.CreatedDate.Value.ToShortDateString()</li>
                                    <li>
                                        <span class="comments me-3">
                                            <a href="javascript:void(0)">2 Comments</a>
                                        </span>
                                        <span class="link-share">
                                            <a href="javascript:void(0)">Share</a>
                                        </span>
                                    </li>
                                </ul>
                            </div>
                            <h5 class="title mb-4">
                                <a href="@url">@item.Title</a>
                            </h5>
                            <p class="short-desc mb-5">@item.Scontents</p>
                            <div class="button-wrap">
                                <a class="btn btn-custom-size lg-size btn-dark rounded-0" href="@url">Xem thêm</a>
                            </div>
                        </div>
                    </div>
                </div>
                    }
                }
                
                
                <div class="col-lg-12">
                    <div class="pagination-area pt-10">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                @if (pageCurrent > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/blogs.html?page=@(pageCurrent-1)" aria-label="Previous">
                                            <span class="fa fa-chevron-left"></span>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/blogs.html" aria-label="Previous">
                                            <span class="fa fa-chevron-left"></span>
                                        </a>
                                    </li>
                                }

                                <li class="page-item active"><a class="page-link" href="#">@pageCurrent</a></li>
                                <li class="page-item"><a class="page-link" href="#">@pageNext</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="/blogs.html?page=@pageNext" aria-label="Next">
                                        <span class="fa fa-chevron-right"></span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>