
@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebBanDongHo.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục" + @ViewBag.CurrentPage;
    Layout = "~/Areas/admin/Views/Shared/_Admin_Layout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách Page : page @ViewBag.CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="text-right">
            <a class="btn btn-primary" asp-controller="AdminCategories" asp-action="Create">
                <i class="anticon anticon-plus-circle m-r-5"></i>
                <span>Tạo mới danh mục</span>
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên danh mục</th>
                        <th>Sắp xếp</th>
                        <th>Trạng thái</th>
                        <th>#</th>
                    </tr>
                </thead>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        string url = $"/{item.Alias}";
            <tr>

                <td>@item.CatId</td>
                <td>@item.CatName</td>
                <td>@item.Ordering</td>



                <td>
                    @if (item.Published == true)
                    {
                        <div class="d-flex align-items-center">
                            <div class="badge badge-success badge-dot m-r-10"></div>
                            <div>Public</div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class=" badge badge-danger badge-dot m-r-10"></div>

                            <div>Non-Public</div>
                        </div>
                    }
                </td>
                <td>
                    <a class="btn btn-success m-r-5" asp-area="Admin" asp-controller="AdminCategories" asp-action="Details" asp-route-id="@item.CatId ">Xem</a>
                    <a class="btn btn-primary m-r-5" asp-area="Admin" asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@item.CatId ">Xoá</a>
                    <a class="btn btn-secondary m-r-5" asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@item.CatId ">Sửa</a>
                </td>
            </tr>
                    }
                }
            </table>
            <div aria-label="Page navigation example">
                <ul>
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>
