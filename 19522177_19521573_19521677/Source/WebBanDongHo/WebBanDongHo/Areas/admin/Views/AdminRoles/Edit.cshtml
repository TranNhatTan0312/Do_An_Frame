@model WebBanDongHo.Models.Role

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Admin_Layout.cshtml";
}

<h1>Sửa thông tin</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Admin" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@Model.RoleId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />
            <div class="form-group">
                <div class="form-group col-md-8">
                    <label for="inputEmail3" class="col-sm-8 col-form-label">Tên</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputEmail3" asp-for="RoleName" placeholder="Nhập tên">
                    </div>
                </div>
                <div class="form-group col-md-8">
                    <label for="inputPassword3" class="col-sm-8 col-form-label">Mô tả</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputPassword3" asp-for="Description" placeholder="Nhập mô tả">
                    </div>
                </div>


                <div class="form-group col-md-8">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

