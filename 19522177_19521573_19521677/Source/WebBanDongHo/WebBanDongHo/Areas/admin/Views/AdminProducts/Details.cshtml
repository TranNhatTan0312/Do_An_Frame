@model WebBanDongHo.Models.Product

@{
    ViewData["Title"] = "Thông tin sản phẩm" + Model.ProductName;
    Layout = "~/Areas/admin/Views/Shared/_Admin_Layout.cshtml";
}

<h1>Details</h1>
<div class="page-header">

    <div class="breadcrumb breadcrumb-dash">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5">Home</i></a>
        <a class="breadcrumb-item"asp-area="Admin" asp-controller="AdminProducts" asp-action="Index" >Danh sach san pham</a>
        <span class="breadcrumb-item active">Thong tin san pham: @Model.ProductName</span> 
    </div>
</div>

<div class="table-responsive">


    <table class="product-info-table m-t-20">
        <tbody>
            <tr>
                <td>ID</td>
                <td>@Model.ProductId</td>
            </tr>
            <tr>
                <td>Tên sản phẩm</td>
                <td>@Model.ProductName</td>
            </tr>
            <tr>
                <td>Mô tả ngắn</td>
                <td>@Model.ShortDesc</td>
            </tr>
            <tr>
                <td>Giá bán</td>
                <td>@Model.Price</td>
            </tr>
            <tr>
                <td>Discount</td>
                <td>@Model.Discount</td>
            </tr>
            <tr>
                <td>Ngày tạo</td>
                <td>@Model.DateCreated</td>
            </tr>
            <tr>
                <td>Ngày sửa</td>
                <td>@Model.DateModified</td>
            </tr>
            <tr>
                <td>Mô tả</td>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <td>Tiêu đề</td>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <td>Meta</td>
                <td>@Model.MetaDesc</td>
            </tr>
            <tr>
                <td>Key</td>
                <td>@Model.MetaKey</td>
            </tr>
            <tr>
                <td>Tag</td>
                <td>@Model.Tags</td>
            </tr>
            <tr>
                <td>Danh mục</td>
                <td>@Model.Cat.CatName</td>
            </tr>
            <tr>
                <td>Ảnh </td>
                <td><img width="200" height="200" src="~/images/products/@Model.Thumb" alt="@Model.Title" />"</td>
            </tr>
            <tr>
                <td>Active</td>
                <td>
                    @if (Model.Active)
                    {
                        <div class="switch m-r-10">
                            <input type="checkbox" id="switch-1" checked="" />
                            <label for="switch-1"></label>

                        </div>
                    }
                    else
                    {
                        <div class="switch m-r-10">
                            <input type="checkbox" id="switch-2" />
                            <label for="switch-2"></label>

                        </div>
                    }
                </td>
            </tr>
            <tr>
                <td>BestSellers</td>
                <td>
                    @if (Model.BestSellers)
                    {
                        <div class="switch m-r-10">
                            <input type="checkbox" id="switch-1" checked="" />
                            <label for="switch-1"></label>

                        </div>
                    }
                    else
                    {
                        <div class="switch m-r-10">
                            <input type="checkbox" id="switch-2" />
                            <label for="switch-2"></label>

                        </div>
                    }
                </td>
            </tr>
            <tr>
                <td>HomeFlag</td>
                <td>
                    @if (Model.HomeFlag)
                    {
                        <div class="switch m-r-10">
                            <input type="checkbox" id="switch-1" checked="" />
                            <label for="switch-1"></label>

                        </div>
                    }
                    else
                    {
                        <div class="switch m-r-10">
                            <input type="checkbox" id="switch-2" />
                            <label for="switch-2"></label>

                        </div>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>
